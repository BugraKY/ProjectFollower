                            <tr>
                                <td>
                                    <img src="img/orj/firmalar/manypoints.png" alt="Fat Rascal" class="list-thumbnail responsive border-0 card-img-left" />
                                </td>
                                <td>
                                    <p class="list-item-heading">Many Points Post</p>
                                </td>
                                <td>
                                    <p class="text-muted">Many Points</p>
