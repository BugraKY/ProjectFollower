@section scripts
{
    <script src="/js/vendor/jquery.validate/jquery.validate.min.js"></script>
    <script src="/js/vendor/jquery.validate/additional-methods.min.js"></script>
    <script src="/js/vendor/datatables-index.min.js"></script>

    <script>
        $(document).ready(function () {
            
            $.ajax({
                url: "jsonresult/getallcustomers",
                type: "GET",
                contentType: "application/json",
                dataType: "json",
                success: function (data) {
                    $.each(data, function (i, item) {
                        /*
                        $('#companytypes').append($('<option>', {
                            value: item.id,
                            text: item.name
                        }));*/
                        var img = "";
                        var name = item.name;
                        var authname = item.authorizedName;
                        var comptype = item.companyType.name;                        
                        var htmlstr = `
                            <tr>
                                <td>
                                    <img src="`+img+`" alt="`+name+`" class="list-thumbnail responsive border-0 card-img-left" />
                                </td>
                                <td>
                                    <p class="list-item-heading">`+name+`</p>
                                </td>
                                <td>
                                    <p class="text-muted">`+authname+`</p>
                                </td>
                                <td>
                                    <p class="text-muted">`+comptype+`</p>
                                </td>
                                <td class="text-right">
                                    <form method="get" action="musteriler/sil/`+ item.id+`">
                                    <!--<input name="id" value="`+ item.id +`" hidden/>-->
                                    <input name="status" value="true" hidden/>
                                    <button type="submit" class="btn btn-danger btn-sm mb-1 delete-project"><i class="glyph-icon simple-icon-trash mr-1"></i>Sil</button>
                                    <a href="/musteriler/`+ item.id +`" type="button" class="btn btn-secondary btn-sm mb-1"><i class="glyph-icon simple-icon-info mr-1"></i>Detaylar</a>
                                    </form>
                                    
                                </td>
                            </tr>`;
                        
                        $("#tbody").append(htmlstr);


                    });
                }
            });
        });
    </script>
