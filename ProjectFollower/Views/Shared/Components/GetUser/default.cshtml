@model ProjectFollower.Models.ViewModels.Users


<div class="user d-inline-block">
    <button class="btn btn-empty p-0" type="button" data-toggle="dropdown" aria-haspopup="true"
            aria-expanded="false">
        <span class="name">@Model.FullName</span>
        <span>
            <img alt="Profile Picture" src="@Model.ImageUrl" />
        </span>
    </button>

    <div class="dropdown-menu dropdown-menu-right mt-3">
        <a class="dropdown-item" data-toggle="modal" data-target="#sifreModal" href="#">Şifre Değiştir</a>
        <a class="dropdown-item" data-toggle="modal" data-target="#photoModal" href="#">Profil Fotoğrafı Değiştir</a>
        <a class="dropdown-item" asp-controller="SignIn" asp-action="Logout">Güvenli Çıkış</a>
    </div>
</div>