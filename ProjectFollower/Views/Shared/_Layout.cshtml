    @RenderBody()
    <!-- Modal Statü Değiştir -->
    <div class="modal fade" id="statuModal" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="statuModalLabel">Statü Değiştir</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form>
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Proje Adı</label>
                            <p>Poligon Logo Tasarımı</p>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword2">Statü</label>
                            <select class="form-control select-single" data-width="100%">
                                <option value="AK">Yapım Aşamasında</option>
                                <option value="HI">Müşteri Onayında</option>
                                <option value="CA">Tamamlandı</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword2">Durum</label>
                            <select class="form-control select-single" data-width="100%">
                                <option value="AK">Normal</option>
                                <option value="HI">Acil</option>
                            </select>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary"
                                data-dismiss="modal">
                            Kapat
                        </button>
                        <button type="button" class="btn btn-primary">Değişiklikleri Kaydet</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Modal Profil Foto Değiştir -->


    <div class="modal fade" id="photoModal" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="photoModalLabel">Profil Fotoğrafı Değiştir</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form id="changephoto-form" asp-controller="Account" asp-action="UpdateUserPhoto" enctype="multipart/form-data">
                    <div class="modal-body">
                        <div class="form-group">
                            <div class="row d-flex align-items-center justify-content-center">
                                <div class="col-sm-6 text-center" id="photochange">
                                    Mevcut Profil Fotoğrafı<br />

                                </div>
                                <div class="col-sm-6 text-center">
                                    <p>Yeni Profil Fotoğrafı Yükleyin</p><br />
                                    <div class="input-group mb-3 file-avatar ">
                                        <label class="custom-select custom-select-label" for="file-upload"></label>
                                        <input type="file" class="d-none" name="file-upload" id="file-upload" />
                                        <div class="input-group-append">
                                            <label class="input-group-text" for="file-upload">Fotoğraf Yükle</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary"
                                data-dismiss="modal">
                            Kapat
                        </button>
                        <button type="submit" class="btn btn-primary" onclick="return updatePhotoFunc()" id="modalPhotoSubmit">Değişiklikleri Kaydet</button>
                        @*<button type="submit" class="btn btn-primary" id="modalsubmit">Değişiklikleri Kaydet</button>*@
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Modal Şifre Değiştir -->
    <div class="modal fade" id="sifreModal" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="sifreModalLabel">Şifre Değiştir</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form id="changepass-form">
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="modalCurrentPassword">Geçerli Şifre</label>
                            <input type="password" class="form-control" id="modalCurrentPassword" name="currentPassword"
                                   placeholder="Geçerli Şifre">
                        </div>
                        <div class="form-group">
                            <label for="modalPassword">Yeni Şifre</label>
                            <input type="password" class="form-control" id="modalPassword" name="newPassword"
                                   placeholder="Şifre">
                        </div>
                        <div class="form-group">
                            <label for="modalPasswordconfirm">Yeni Şifre Tekrar</label>
                            <input type="password" class="form-control" id="modalPasswordconfirm" name="confirmnewPassword"
                                   placeholder="Şifre">
                        </div>
                        <div class="custom-control custom-checkbox mb-3">
                            <input type="checkbox" class="custom-control-input" id="customCheck1">
                            <label class="custom-control-label" for="customCheck1">Okudum, anladım kabul ediyorum.</label>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary"
                                data-dismiss="modal">
                            Kapat
                        </button>
                        <button type="button" class="btn btn-primary" onclick="return editUserFunc()" id="modalsubmit">Değişiklikleri Kaydet</button>
                        @*<button type="submit" class="btn btn-primary" id="modalsubmit">Değişiklikleri Kaydet</button>*@
                    </div>
                </form>
            </div>
        </div>
    </div>
    <footer class="page-footer">
        <div class="footer-content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12 col-sm-6">
                        <p class="mb-0 text-muted">All rights reserved. &copy; Many Points 2022.</p>
                    </div>
                </div>
            </div>
        </div>
    </footer>

